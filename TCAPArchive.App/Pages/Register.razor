@using TCAPArchive.App.Services;
@page "/register"


<h3>RegisterForm</h3>

<EditForm Model="@RegisterViewModel" OnValidSubmit="@HandleRegisterUser">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="Email">Email:</label>
        <InputText id="Email" class="form-control" @bind-Value="@RegisterViewModel.Email" />
    </div>

    <div class="form-group">
        <label for="Password">Password:</label>
        <InputText id="Password" type="password" class="form-control" @bind-Value="@RegisterViewModel.Password" />
    </div>

    <div class="form-group">
        <label for="ConfirmPassword">Confirm Password:</label>
        <InputText id="ConfirmPassword" type="password" class="form-control" @bind-Value="@RegisterViewModel.ConfirmPassword" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Register</button>
    </div>
</EditForm>

<div class="mt-3">
    <p>Already have an account? <a href="/">Log in here</a>.</p>
</div>

@code {
    private RegisterViewModel RegisterViewModel { get; set; } = new RegisterViewModel();

    [Inject]
    IUserDataService userDataService { get; set; }

    protected async Task HandleRegisterUser()
    {
        await userDataService.CreateUserAsync(RegisterViewModel);
    }
}
