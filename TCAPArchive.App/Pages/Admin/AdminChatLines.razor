@page "/chatlines/{ChatSessionId:guid}"
@layout AdminLayout


@inject DialogService DialogService
@inject NotificationService NotificationService

<RadzenDataGrid AllowFiltering="true" AllowColumnResize="true"
                FilterMode="FilterMode.Simple" PageSize="50" AllowPaging="true" AllowSorting="true" Data="@adminChatlines" TItem="ChatLinesViewModel" ColumnWidth="300px"
                FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
                LogicalFilterOperator="LogicalFilterOperator.Or">
    <Columns>
        <RadzenDataGridColumn TItem="ChatLinesViewModel" Title="Photo" Sortable="false" Filterable="false" Width="50px">
            <Template Context="data">
                <RadzenImage class="rz-gravatar" Path="@($"data:image/jpeg;base64,{Convert.ToBase64String(data.ImageData)}")" />
            </Template>
        </RadzenDataGridColumn>

        <RadzenDataGridColumn TItem="ChatLinesViewModel" Property="chatLine.SenderHandle" Title="Handle" Width="100px" />
        <RadzenDataGridColumn TItem="ChatLinesViewModel" Property="chatLine.Message" Title="Message" Width="400px" />
        <RadzenDataGridColumn TItem="ChatLinesViewModel" Property="chatLine.TimeStamp" Title="Time Sent" Width="200px" />
        <RadzenDataGridColumn TItem="ChatLinesViewModel" Property="chatLine.Position" Title="Position" Width="50px" />
        <RadzenDataGridColumn TItem="ChatLinesViewModel" Title="Edit" Sortable="false" Filterable="false" Width="50px">
            <Template Context="data">
                <RadzenButton Click="() => OpenChatLineEdit(data.chatLine.Id, data.chatLine.SenderHandle)" Icon="edit" Style=" width: 40px" />
            </Template>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="ChatLinesViewModel" Title="Insert" Sortable="false" Filterable="false" Width="50px">
            <Template Context="data">
                <RadzenButton Click="() => InsertChatLine(data.chatLine.Id)" Icon="add" Style=" width: 40px" />
            </Template>
        </RadzenDataGridColumn>
    </Columns>
</RadzenDataGrid>